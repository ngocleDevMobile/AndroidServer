<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:background="@drawable/et_custom"
    android:layout_marginBottom="10dp"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/et_img">

            <ImageView
                android:id="@+id/imageaddCard"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/android_developer" />

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/sss"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="108dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="31dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvspcard"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nunito_bold"
                android:lineHeight="28dp"
                android:text="Android Developer"
                android:textColor="@color/miniTitle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvPriceCard"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/nunito_semibold"
                android:maxLines="3"
                android:text="Explore the power of android \napplication development"
                android:textColor="#fb673b"
                android:textSize="15sp"

                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>





    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="68dp"
            android:src="@drawable/ic_delete_card" />

    </RelativeLayout>



</RelativeLayout>





