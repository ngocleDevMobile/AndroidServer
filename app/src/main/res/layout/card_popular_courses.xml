<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/et_img"
            >
        <ImageView
            android:id="@+id/imageNews"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"


            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/android_developer" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:lineHeight="28dp"
                android:visibility="visible"
                android:text="Android Developer"
                android:textColor="@color/miniTitle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Explore the power of android \napplication development"
                android:textColor="@color/miniDescription"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:maxLines="3"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>





